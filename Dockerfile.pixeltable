# Multi-stage build for Pixeltable MCP server
FROM python:3.11-slim as builder

# Install build dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    git \
    && rm -rf /var/lib/apt/lists/*

# Create virtual environment
RUN python -m venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

# Copy requirements
COPY requirements-pixeltable.txt /tmp/
RUN pip install --no-cache-dir -r /tmp/requirements-pixeltable.txt

# Production stage
FROM python:3.11-slim

# Install runtime dependencies
RUN apt-get update && apt-get install -y \
    libgomp1 \
    && rm -rf /var/lib/apt/lists/*

# Copy virtual environment from builder
COPY --from=builder /opt/venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

# Create non-root user
RUN useradd -m -u 1000 mcp && \
    mkdir -p /app /data && \
    chown -R mcp:mcp /app /data

# Set working directory
WORKDIR /app

# Copy application code
COPY --chown=mcp:mcp pixeltable_mcp_server.py pixeltable_setup.py ./

# Switch to non-root user
USER mcp

# Environment variables
ENV PIXELTABLE_HOME=/data \
    PYTHONUNBUFFERED=1 \
    OPENAI_API_KEY=""

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=10s --retries=3 \
    CMD python -c "import pixeltable as pxt; import sys; sys.exit(0)"

# Volume for persistent data
VOLUME ["/data"]

# Expose MCP stdio interface (no network port needed)
CMD ["python", "pixeltable_mcp_server.py"]
